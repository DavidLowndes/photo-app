<% if current_user %>
  <h3>Thanks for signing up, <%= current_user.email %>. I have your soul now.</h3>
<% else %>
  <div class="jumbotron">
    <h2>
      Welcome to coolest photo app ever!<br>
      The new Facebook and also Instagram!
    </h2>
    <p class="lead">
      You'll love doing shit with your photos here. <br>
      Sign up! Please!
    </p>
  </div>
  <div class="row">
    <div class="row well plans col-md-8 col-md-offset-2">
      <div class="col-sm-6 plan">
        <h2>Premium Plan</h2>
        <div class="features">
          <ul>
            <li>Unlimited Image Uploads</li>
            <li>Responsive design</li>
            <li>Access anywhere</li>
          </ul>
        </div>
        <div class="price">
          Price: £10
        </div>
        <p>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-warning sign-up' %>
        </p>
      </div>
      <div class="col-sm-5 plan">
        <h2>Amazing Plan</h2>
        <div class="features">
          <ul>
            <li class='extra'>Special memes</li>
            <li>Unlimited Image Uploads</li>
            <li>Responsive design</li>
            <li>Access anywhere</li>
          </ul>
        </div>
        <div class="price">
          Price: £50
        </div>
        <p>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-warning sign-up' %>
        </p>
      </div>
    </div>
  </div>
<% end %>

